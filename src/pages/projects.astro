                    <span class:list={[
                      'px-3 py-1 rounded-full text-xs font-semibold',
                      project.status === 'completed' && 'bg-emerald-500/20 text-emerald-400',
                      project.status === 'development' && 'bg-blue-500/20 text-blue-400',
                      project.status === 'planned' && 'bg-amber-500/20 text-amber-400'
