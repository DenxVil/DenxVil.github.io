---

<Layout title="All Projects - Denvil (Harsh)">
  <Header currentPage="all-projects" />
  
  <main class="pt-32 pb-20 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Page Header -->
      <div class="text-center mb-16 gsap-reveal">
        <h1 class="text-4xl md:text-6xl font-black gradient-text mb-4">All Projects</h1>
        <p class="text-xl text-text-secondary max-w-2xl mx-auto">
          A comprehensive showcase of my work in development, design, and technology
        </p>
      </div>
      
      <!-- Search & Filter -->
      <div class="mb-12">
        <!-- Search -->
        <div class="max-w-md mx-auto mb-8 relative">
          <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-text-secondary" viewBox="0 0 24 24" fill="currentColor">
            <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
          </svg>
          <input 
            type="text" 
            id="search-input"
            placeholder="Search projects..."
            class="w-full pl-12 pr-4 py-4 bg-bg-card/70 border border-white/10 rounded-full text-text-primary placeholder-text-secondary focus:outline-none focus:border-primary/50 transition-all duration-300"
          />
        </div>
        
        <!-- Filter Buttons -->
        <div class="flex flex-wrap justify-center gap-3">
          {filters.map((filter, index) => (
            <button 
              class:list={[
                'filter-btn px-6 py-2 rounded-full font-semibold capitalize transition-all duration-300',
                index === 0 ? 'bg-gradient-to-r from-primary to-secondary text-white' : 'bg-primary/10 border border-primary/30 text-text-primary hover:bg-primary/20'
              ]}
              data-filter={filter}
            >
              {filter === 'all' ? 'All' : filter === 'development' ? 'In Development' : filter.charAt(0).toUpperCase() + filter.slice(1)}
            </button>
          ))}
        </div>
      </div>
      
      <!-- Projects Grid -->
      <div class="bento-grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 auto-rows-auto gap-6" id="projects-grid">
        
        {projects.map(project => (
          <div 
            class:list={[
              'project-item transition-all duration-500',
              project.featured && 'lg:col-span-2'
            ]}
            data-status={project.status}
            id={project.id}
          >
            {project.link ? (
              <a 
                href={project.link}
                target={project.external ? '_blank' : undefined}
                rel={project.external ? 'noopener noreferrer' : undefined}
                class:list={[
                  'project-card tilt-card block h-full',
                  project.featured && 'featured'
                ]}
              >
                <div class={`h-48 bg-gradient-to-br ${project.gradient} flex items-center justify-center relative overflow-hidden`}>
